# ===========================================
# ENVIRONMENT CONFIGURATION
# ===========================================
NODE_ENV=development

# ===========================================
# DATABASES
# ===========================================

# Product Service Database
PRODUCT_DB_HOST=localhost
PRODUCT_DB_PORT=5432
PRODUCT_DB_NAME=product_db
PRODUCT_DB_USER=productuser
PRODUCT_DB_PASSWORD=productpass
PRODUCT_DATABASE_URL=postgresql://productuser:productpass@localhost:5432/product_db

# Order Service Database
ORDER_DB_HOST=localhost
ORDER_DB_PORT=5433
ORDER_DB_NAME=order_db
ORDER_DB_USER=orderuser
ORDER_DB_PASSWORD=orderpass
ORDER_DATABASE_URL=postgresql://orderuser:orderpass@localhost:5433/order_db

# Auth Service Database
AUTH_DB_HOST=localhost
AUTH_DB_PORT=5434
AUTH_DB_NAME=auth_db
AUTH_DB_USER=authuser
AUTH_DB_PASSWORD=authpass
AUTH_DATABASE_URL=postgresql://authuser:authpass@localhost:5434/auth_db

# Content Service Database
CONTENT_DB_HOST=localhost
CONTENT_DB_PORT=5435
CONTENT_DB_NAME=content_db
CONTENT_DB_USER=contentuser
CONTENT_DB_PASSWORD=contentpass
CONTENT_DATABASE_URL=postgresql://contentuser:contentpass@localhost:5435/content_db

# Inventory Service Database
INVENTORY_DB_HOST=localhost
INVENTORY_DB_PORT=5436
INVENTORY_DB_NAME=inventory_db
INVENTORY_DB_USER=inventoryuser
INVENTORY_DB_PASSWORD=inventorypass
INVENTORY_DATABASE_URL=postgresql://inventoryuser:inventorypass@localhost:5436/inventory_db

# Analytics Service Database
ANALYTICS_DB_HOST=localhost
ANALYTICS_DB_PORT=5437
ANALYTICS_DB_NAME=analytics_db
ANALYTICS_DB_USER=analyticsuser
ANALYTICS_DB_PASSWORD=analyticspass
ANALYTICS_DATABASE_URL=postgresql://analyticsuser:analyticspass@localhost:5437/analytics_db

# ===========================================
# REDIS
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379

# ===========================================
# RABBITMQ
# ===========================================
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=ecommerce
RABBITMQ_PASSWORD=ecommerce123
RABBITMQ_VHOST=/
RABBITMQ_URL=amqp://ecommerce:ecommerce123@localhost:5672

# ===========================================
# MINIO (S3-Compatible Storage)
# ===========================================
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_USE_SSL=false
MINIO_BUCKET_NAME=ecommerce-media

# ===========================================
# KEYCLOAK
# ===========================================
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=ecommerce
KEYCLOAK_CLIENT_ID=ecommerce-api
KEYCLOAK_CLIENT_SECRET=your-client-secret-here
KEYCLOAK_ADMIN_USERNAME=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# ===========================================
# JWT (Fallback if not using Keycloak)
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d

# ===========================================
# STRIPE
# ===========================================
STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ===========================================
# EMAIL SERVICE
# ===========================================
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password
EMAIL_FROM=noreply@ecommerce.com
EMAIL_FROM_NAME=E-Commerce Platform

# ===========================================
# API GATEWAY (KONG)
# ===========================================
KONG_ADMIN_URL=http://localhost:8001
KONG_PROXY_URL=http://localhost:8080

# ===========================================
# SERVICE PORTS
# ===========================================
PRODUCT_SERVICE_PORT=3001
ORDER_SERVICE_PORT=3002
AUTH_SERVICE_PORT=3003
PAYMENT_SERVICE_PORT=3004
CONTENT_SERVICE_PORT=3005
MEDIA_SERVICE_PORT=3006
INVENTORY_SERVICE_PORT=3007
ANALYTICS_SERVICE_PORT=3008
FRONTEND_PORT=3000
ADMIN_PANEL_PORT=3010

# ===========================================
# MONITORING & OBSERVABILITY
# ===========================================
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831
JAEGER_COLLECTOR_ENDPOINT=http://localhost:14268/api/traces

PROMETHEUS_ENDPOINT=http://localhost:9090

LOG_LEVEL=info
LOG_FORMAT=json

# ===========================================
# FRONTEND ENVIRONMENT VARIABLES
# ===========================================
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-change-this

# ===========================================
# OPENSHIFT (Production)
# ===========================================
OPENSHIFT_NAMESPACE=ecommerce
OPENSHIFT_REGISTRY=image-registry.openshift-image-registry.svc:5000
OPENSHIFT_SERVER=https://api.your-cluster.com:6443

# ===========================================
# DEVELOPMENT
# ===========================================
ENABLE_API_DOCS=true
ENABLE_DEBUG=false
CORS_ORIGIN=http://localhost:3000,http://localhost:3010
