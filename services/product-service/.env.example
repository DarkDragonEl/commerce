# Service Configuration
NODE_ENV=development
PORT=3001
SERVICE_NAME=product-service

# Database
DATABASE_URL=postgresql://productuser:productpass@localhost:5432/product_db

# Redis
REDIS_URL=redis://localhost:6379

# RabbitMQ
RABBITMQ_URL=amqp://ecommerce:ecommerce123@localhost:5672

# JWT
JWT_SECRET=dev-secret-change-in-production

# Keycloak
KEYCLOAK_URL=http://localhost:8180
KEYCLOAK_REALM=ecommerce
KEYCLOAK_CLIENT_ID=ecommerce-api
KEYCLOAK_CLIENT_SECRET=

# Logging
LOG_LEVEL=debug
LOG_FORMAT=pretty

# API Documentation
ENABLE_API_DOCS=true

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3010

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# Monitoring
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831

# Inventory Service (for stock checks)
INVENTORY_SERVICE_URL=http://localhost:3007
