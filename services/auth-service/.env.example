# Service Configuration
NODE_ENV=development
PORT=3002
SERVICE_NAME=auth-service

# Database
DATABASE_URL=postgresql://authuser:authpass@localhost:5433/auth_db

# Redis (for sessions and caching)
REDIS_URL=redis://localhost:6379
REDIS_DB=1

# RabbitMQ
RABBITMQ_URL=amqp://ecommerce:ecommerce123@localhost:5672

# Keycloak Configuration
KEYCLOAK_URL=http://localhost:8180
KEYCLOAK_REALM=ecommerce
KEYCLOAK_CLIENT_ID=ecommerce-backend
KEYCLOAK_CLIENT_SECRET=your-client-secret-here

# JWT Configuration (for internal tokens)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d

# Session Configuration
SESSION_SECRET=your-session-secret-change-this-in-production
SESSION_MAX_AGE=86400000

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
