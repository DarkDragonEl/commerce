# Service
NODE_ENV=development
PORT=3006
SERVICE_NAME=email-service

# Database
DATABASE_URL=postgresql://emailuser:emailpass@localhost:5437/email_db

# Redis
REDIS_URL=redis://localhost:6379
REDIS_DB=4

# RabbitMQ
RABBITMQ_URL=amqp://ecommerce:ecommerce123@localhost:5672

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM_NAME=E-Commerce Platform
SMTP_FROM_EMAIL=noreply@ecommerce.com

# Email Settings
EMAIL_MAX_RETRY=3
EMAIL_RETRY_DELAY=60000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
