# Service
NODE_ENV=development
PORT=3004
SERVICE_NAME=payment-service

# Database
DATABASE_URL=postgresql://paymentuser:paymentpass@localhost:5432/payment_db

# Redis
REDIS_URL=redis://localhost:6379
REDIS_DB=3

# RabbitMQ
RABBITMQ_URL=amqp://admin:admin@localhost:5672

# Stripe Configuration
# Set to true to use mock payment processor (no real charges)
STRIPE_MOCK=true

# Real Stripe credentials (only needed if STRIPE_MOCK=false)
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_API_VERSION=2023-10-16

# External Services
ORDER_SERVICE_URL=http://localhost:3003

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000

# CORS
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FORMAT=pretty

# Payment Configuration
PAYMENT_CURRENCY=USD
PAYMENT_TIMEOUT=900000
REFUND_TIMEOUT=86400000
